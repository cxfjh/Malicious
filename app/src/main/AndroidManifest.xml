<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- 1. SYSTEM_ALERT_WINDOW：允许应用显示悬浮窗（覆盖其他应用）-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 2. FOREGROUND_SERVICE：允许应用运行前台服务（在通知栏显示持续运行的服务）-->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- 3. WRITE_SETTINGS：允许应用修改系统设置（如屏幕超时时间）-->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- 4. MODIFY_AUDIO_SETTINGS：允许应用修改音频设置（如音量、铃声模式）-->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <!-- 5. BLUETOOTH：允许应用使用蓝牙（如连接蓝牙设备）-->
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:name="com.example.utils.LifecycleManager"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">

        <!-- android:excludeFromRecents="true" 应用不会出现在最近任务列表中 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:windowSoftInputMode="stateHidden"
            android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MusicService服务 -->
        <service android:name="com.example.utils.MusicService"/>
    </application>
</manifest>
